<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
      xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
   android:padding="20dp" 
    >

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/rolltext"
        android:text="Roll no:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
        app:layout_constraintStart_toEndOf="@+id/rolltext"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rollans"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/rolltext"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/nametext"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/nametext"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/nameans"
        app:layout_constraintTop_toBottomOf="@+id/rollans"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/nametext"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/markstext"
        android:text="Marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintStart_toEndOf="@+id/markstext"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/marksans"
        app:layout_constraintTop_toBottomOf="@+id/nameans"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>

